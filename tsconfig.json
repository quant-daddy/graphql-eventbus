{
  "compilerOptions": {
    "incremental": true,
    "lib": ["es2018", "esnext"],
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "alwaysStrict": true,
    "sourceMap": false,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "typeRoots": ["./node_modules/@types", "./typings"],
    "baseUrl": ".",
    "declaration": true,
    "skipLibCheck": true,
    "paths": {
      "graphql-eventbus": ["packages/core/src/index.ts"]
    }
  },
  "include": ["packages/"],
  "exclude": ["website/", "examples/"]
  // "exclude": ["node_modules/", "packages/codegen/data/.output.ts"]
}
